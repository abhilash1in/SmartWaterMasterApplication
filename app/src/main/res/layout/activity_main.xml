        <!--android:onClick="showDialogAndConnectToMqtt" />-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Options"
        android:clickable="true"
        android:textColor="#FF0080FF"
        android:textSize="15dp"
        android:padding="17dp"
        android:onClick="launchAdminScreen"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pub Sub"
        android:clickable="true"
        android:textColor="#FF0080FF"
        android:textSize="15dp"
        android:padding="20dp"
        android:onClick="launchPubSubScreen"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Debug Options"
        android:clickable="true"
        android:textColor="#FF0080FF"
        android:textSize="15dp"
        android:padding="20dp"
        android:onClick="launchDebugScreen"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stats Options"
        android:clickable="true"
        android:textColor="#FF0080FF"
        android:textSize="15dp"
        android:padding="20dp"
        android:onClick="launchStatsScreen"/>
</LinearLayout>
