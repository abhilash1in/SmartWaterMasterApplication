<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.shashankshekhar.servicedemo.ConnectionCheckActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Google"
        android:id="@+id/button1"
        android:onClick="checkGoogle"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Ggl WO DNS"
        android:id="@+id/button2"
        android:onClick="checkWODNS"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Broker"
        android:id="@+id/button3"
        android:onClick="checkBroker"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Brkr WO DNS"
        android:id="@+id/button4"
        android:onClick="checkBrokerWODNS"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Http Conection"
        android:id="@+id/button5"
        android:onClick="checkHttpConn"/>
</LinearLayout>
